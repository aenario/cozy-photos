div.row-fluid
  div#about
    div#links.clearfix
        p
          a.flatbtn.back(href="#albums")
            span.glyphicon.glyphicon-arrow-left.icon-white
            span= t("Back")
        P
            a.flatbtn.clearance
                if clearance == 'public'
                  span.glyphicon.glyphicon-globe.icon-white
                  | &nbsp;
                  | #{t('public')}
                else if clearance && clearance.length > 0
                  span= clearance.length
                  span.glyphicon.glyphicon-share.icon-white
                  | &nbsp;
                  | #{t('shared')}
                else
                  span.glyphicon.glyphicon-lock.icon-white
                  | &nbsp;
                  | #{t('private')}
        p
             a.flatbtn.download(href="albums/#{id}.zip")
              span.glyphicon.glyphicon-download-alt.icon-white
              span= t("Download")

        p
            a.flatbtn.stopediting(href="#albums/#{id}")
              span.glyphicon.glyphicon-eye-open.icon-white
              span= t("Stop editing")


        p
             a.flatbtn.startediting(href="#albums/#{id}/edit")
               span.glyphicon.glyphicon-edit.icon-white
               span= t("Edit")
        p
            a.flatbtn.delete
              span.glyphicon.glyphicon-remove.icon-white
              span= t("Delete")

    h1#title!= title
    div#description!= description
